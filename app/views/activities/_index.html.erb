
<% if @activities.exists? %>
<section class="pt-5 container activities-container">
    <div class="row py-lg-5">
      <div class="col-lg-8 col-md-10 mx-auto">
      <h3 class="text-center" style="font-weight: bold;">履歴一覧</h3>
        <% @activities.each do |activity| %>
          <%= render 'activity', activity: activity %>
        <% end %>
        <%= paginate @activities%>
      </div>
    </div>
</section>
<% else %>
  <section class="pt-5 text-center container activities-container">
    <div class="row py-lg-5">
      <div class="col-lg-8 col-md-10 mx-auto">
        <p>履歴はありません</p>
      </div>
    </div>
  </section>
<%end%>
<% breadcrumb :user_activity %>
