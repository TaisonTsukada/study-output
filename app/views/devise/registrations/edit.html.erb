<main>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h3>ユーザー情報の編集</h3>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname, "ニックネーム"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true, class: "form-control"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "Eメール"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
          </div>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label :password %> <i>(変更してくない場合は、空欄のままにしてください)</i><br />
          </div>
          <div class ="field-input">
            <%= f.password_field :password,class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation, "パスワードの確認"%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :avatar, "プロフィール画像"%>
          </div>
          <div class='field-input'>
            <%= f.file_field :avatar, class: "form-control"%>
          </div>
          <div id="image-list"></div>
        </div>
        <div class='actions'>
          <%= f.submit "変更する", class: 'create-btn p-2'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
<main>