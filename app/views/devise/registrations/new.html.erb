<main>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h3>新規アカウントの作成</h3>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname do %>
              <span class="badge badge-danger mr-1">必須</span>ニックネーム
            <% end %>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true, class: "form-control"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email do %>
              <span class="badge badge-danger mr-1">必須</span>Eメール
            <% end %>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password do %>
              <span class="badge badge-danger mr-1">必須</span>パスワード
            <% end %>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation do %>
              <span class="badge badge-danger mr-1">必須</span>パスワードの確認
            <% end %>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :avatar, "プロフィール画像"%>
          </div>
          <div class='field-input'>
            <%= f.file_field :avatar, class: "form-control"%>
          </div>
          <div id="image-list"></div>
        </div>
        <div class='actions'>
          <%= f.submit "新規登録する", class: 'create-btn p-2'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
<main>

