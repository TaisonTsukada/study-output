
<div class="header sticky-top ">
  <div class ="logo-block">
    <div class="logo">
      <%=link_to "Study Output", root_path %>
    </div>
  </div>
  <ul class="mypage-block">
    <li><dl class="searchbox">
        <%= search_form_for @q, url: articles_path do |f| %>
          <dt><%= f.text_field :title_or_tags_name_cont ,placeholder: '記事検索' %></dt>
          <dd><%= f.submit ("検索") , class: 'search-btn'%></dd>
        <% end %>
        </dl>
    </li>
  <% if user_signed_in? %>
    <li><%= link_to "投稿する", new_article_path, class: 'btn btn-default' %></li>
    <% if unchecked_notifications.any? %>
      <i class="fa fa-circle", style="color: gold;"></i>
    <% end %>
    <li>
      <%= link_to "お知らせ", notifications_path, class: "btn-default"%>
    </li>
    <li><%= link_to  user_path(current_user.id) do %>
          <% if current_user.image.attached? %>
            <p><%= image_tag(rails_blob_path(@user.image),:size => "50x50", class: "img-circle") %></p>
          <% else %>
            <p><%= image_tag("default_user.png", :size => "50x50", class: "img-circle") %></p>
          <% end %> 
        <% end %>
    </li>
    <li><%= link_to "ログアウト", destroy_user_session_path, class: "btn btn-default", method: :delete%></li>
  <% else %>
    <li><%= link_to "サインイン",new_user_session_path, class: 'btn btn-default'%>
    <li><%= link_to "サインアップ",new_user_registration_path, class: 'btn btn-default'%>
  <% end %>
  </ul>
</div>
