<main>
  <section class="pt-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-8 col-md-10 mx-auto">
         <% if @user.avatar.attached? %>
            <p><%= image_tag(rails_blob_path(@user.avatar), size: "100x100", class: "img-circle") %></p>
          <% else %>
            <p><%= image_tag("default_user.png", size: "100x100", class: "img-circle") %></p>
          <% end %>
        <h1 class="fw-light"><%= @user.nickname%></h1>
      <% if user_signed_in? %>
        <div id="follow-ajax">
          <%= render 'shared/follow',user: @user %>
       </div>
      <% end %>
        <p>
          <%= link_to " #{@user.followings.count} フォロー", followings_user_path(@user.id), class: "mr-2 shadow-none text-decoration-none", style: "color: black;" %>
          <%= link_to " #{@user.followers.count} フォロワー", followers_user_path(@user.id), class: "ml-2 shadow-none text-decoration-none", style: "color: black;" %>
        </p>
      <% if user_signed_in? &&current_user.id == @user.id %>
        <p>
          <span class= "mr-4">
          <%= link_to edit_user_registration_path(current_user.id) do %>
            <i class="fas fa-user-edit">編集</i>
          <% end %>
          </span>
          
          <span>
          <%= link_to  activities_path  do %>
            <i class="fas fa-user-clock">履歴</i>
          <% end %>
          </span>
        </p>
      <% end %>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light my-2">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= link_to("投稿した記事", user_path(@user.id), class: "nav-item nav-link active") %>
          <% if user_signed_in? && @user.id == current_user.id %>
            <%= link_to("いいねした記事", user_path(option: "likes", id: @user.id), class: "nav-item nav-link ")%>
            <%= link_to("ストックした記事", user_path(option: "stocks", id: @user.id), class: "nav-item nav-link ")%>
          <% end %>
          </div>
        </div>
      </nav>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
         <%= render partial: "articles/article",collection: @articles %>
      </div>
      <div class= "ml-4 pagination">
        <%= paginate @articles %>
      </div>
    </div>
  </div>
</main>