<% if user_signed_in? %>
  <% if current_user.liked_by?(@article.id) %>
      <td>
        <%= link_to destroy_like_path(@article), method: :DELETE, remote: true do %>
          <i class="fa fa-heart unlike-btn"></i>
        <% end %>
        <%= @article.likes.count %>
      </td>
  <% else %>
      <td>
        <%= link_to create_like_path(@article), method: :POST, remote: true do %>
          <i class="fa fa-heart like-btn">
        <% end %>
        <%= @article.likes.count %>
      </td>
  <% end %>
<% else %>
  <p><span>いいね数: </span><%= @article.likes.count %></p>
<% end %>