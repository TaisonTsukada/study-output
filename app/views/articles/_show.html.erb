<%= link_to article_path(article.id),  class: "text-decoration-none shadow-none", "data-turbolinks": false do %>
      <div class="row">
        <div class="col-lg- col-sm-12 col-12">
          <div class="row">
            <div class="col-lg-2 col-sm-2 col-5">
              <% if article.image.attached? %>
                <%=image_tag(article.image, class: "img-thumbnail", width: "150px") %>  <%# width="100%" height="225" もし必要になったらこれをcssにやる%>
              <% else %>
                <%= image_tag("kokuban.jpeg", class: "img-thumbnail", width: "150px")%>
              <% end %>
            </div>
            <div class="col-lg-10 col-sm-10 col-7">
              <h4 class="text-primary"><%= article.title %></h4>
              <div class="mt-4">
                <i class="fa fa-tags" aria-hidden="true"></i>
                <span class="text-decoration-none shadow-none">タグ:</span>
                <% article.tags.each do |tag|%>
                <span class="badge badge-success ml-1 text-decoration-none shadow-none "><%= tag.name %></span>
                <% end %>
              </div>
              <div class="mb-1">
                <i class="fa fa-heart unlike-btn"><%= article.likes.count%></i> 
              </div>
            </div>
          </div>
          <div class="row post-detail">
            <div class="col-lg-12 col-sm-12 col-12">
                <ul class="list-inline">
                  <li class="list-inline-item">
                  <%= link_to user_path(article.user), class: "text-decoration-none shadow-none" do%>
                  <% if article.user.avatar.attached? %>
                    <%= image_tag(rails_blob_path(article.user.avatar),width: "20px", class: "rounded-circle") %><span class="text-info ml-1"><%= article.user.nickname %></span>
                  <% else %>
                    <%= image_tag("default_user.png", class: "rounded-circle", width: "20px") %><span class="text-info ml-1"><%= article.user.nickname %></span>
                  <% end %>
                  <% end %>
                  </li>
                  <li class="list-inline-item">
                    <small class="text-muted"><%= time_ago_in_words(article.created_at) %>前</small>
                  </li>
                </ul>
            </div>
          </div>
        </div>
      </div>
<% end %>
<hr>